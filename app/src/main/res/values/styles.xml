<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="signup_now">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#1A5D1A</item>
    </style>
    <style name="username">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="or_login_wi">
        <item name="android:textSize">@dimen/_40sdp</item>
        <item name="android:textColor">#7D7763</item>
    </style>
    <style name="login_now">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#1A5D1A</item>
    </style>
    <style name="don_t_have_">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="SafeSwift">
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="let_s_talk_">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>