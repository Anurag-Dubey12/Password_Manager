<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Document">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/appBarLayout"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/cross"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Document"
        app:menu="@menu/menuoption"
        app:titleTextColor="@color/black"
        app:titleCentered="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.099">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColorHint="@color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="#10ED00"
        app:boxStrokeErrorColor="#F40000"
        app:boxStrokeWidth="1dp"
        app:expandedHintEnabled="true"
        app:hintAnimationEnabled="true"
        app:hintTextColor="#070707">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Doc_file_Name"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="10dp"
            android:hint="Name"
            android:paddingStart="10dp"
            android:textColorHint="@color/black"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="#10ED00"
            android:textColorHint="@color/black"
            app:boxStrokeErrorColor="#F40000"
            app:boxStrokeWidth="1dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/doc_comment"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginBottom="10dp"
                android:hint="Comment"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/filename"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:text="Filename"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:ellipsize="middle"
            android:maxLines="1"
            android:paddingStart="@dimen/_15sdp"
            />
      <ImageView
          android:id="@+id/selected_image"
          android:layout_width="@dimen/_150sdp"
          android:layout_height="@dimen/_150sdp"
          android:layout_marginStart="@dimen/_15sdp"
          />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitdoc"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:strokeColor="@color/black"
            app:strokeWidth="@dimen/_1sdp"
            app:cornerRadius="@dimen/_15sdp"
            android:layout_gravity="center"
            android:textAllCaps="false"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>