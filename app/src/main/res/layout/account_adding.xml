<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"/>
                <ImageView
                    android:id="@+id/menuoption"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/menu"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                app:boxStrokeErrorColor="#F40000"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#10ED00"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="@dimen/_2sdp"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="#070707">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_value"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginBottom="10dp"
                    android:hint="Login"
                    android:paddingStart="10dp"
                    android:textColorHint="@color/black"
                    tools:ignore="RtlSymmetry" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                app:boxStrokeErrorColor="#F40000"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#10ED00"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="@dimen/_2sdp"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:passwordToggleEnabled="true"
                app:hintTextColor="#070707">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Password_value"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginBottom="10dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingStart="10dp"
                    android:textColorHint="@color/black"
                    tools:ignore="RtlSymmetry" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/generate_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate Password"
                android:textColor="#000000"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="right"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="right"
                app:lottie_rawRes="@raw/getting_started_screen"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                app:boxStrokeErrorColor="#F40000"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#10ED00"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="@dimen/_2sdp"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="#070707">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Comment_value"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginBottom="10dp"
                    android:hint="Comment"
                    android:inputType="textPassword"
                    android:paddingStart="10dp"
                    android:textColorHint="@color/black"
                    tools:ignore="RtlSymmetry" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>