<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Address">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/appBarLayout"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#808080"
        app:navigationIcon="@drawable/cross"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Address"
        app:menu="@menu/menuoption"
        app:titleTextColor="@color/black"
        app:titleCentered="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.099">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/black"
            app:boxStrokeErrorColor="#F40000"
            app:boxStrokeWidth="1dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Name_value"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="10dp"
                android:hint="Name"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address Details"
            android:textStyle="bold"
            android:textColor="#464343"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_16sdp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/black"
            app:boxStrokeErrorColor="#F40000"
            app:boxStrokeWidth="1dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Address_Region_field"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="10dp"
                android:hint="Region"
                android:enabled="false"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/black"
            app:boxStrokeErrorColor="#F40000"
            app:boxStrokeWidth="1dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Address_State_field"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="10dp"
                android:hint="State/province"
                android:paddingStart="10dp"
                android:enabled="false"
                android:textColorHint="@color/black"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/black"
            app:boxStrokeErrorColor="#F40000"
            app:boxStrokeWidth="1dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Address_City_field"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="10dp"
                android:hint="City"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/black"
            app:boxStrokeErrorColor="#F40000"
            app:boxStrokeWidth="1dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Address_Postal_field"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="10dp"
                android:hint="Postal Code"
                android:inputType="number"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/black"
            app:boxStrokeErrorColor="#F40000"
            app:boxStrokeWidth="1dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Address_field"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="10dp"
                android:hint="Street Address"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Details"
            android:textStyle="bold"
            android:textColor="#464343"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_16sdp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/black"
            app:boxStrokeErrorColor="#F40000"
            app:boxStrokeWidth="1dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Address_firstName_field"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="10dp"
                android:hint="First name"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/black"
            app:boxStrokeErrorColor="#F40000"
            app:boxStrokeWidth="1dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Address_Middlename_field"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="10dp"
                android:hint="Middle Name"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/black"
            app:boxStrokeErrorColor="#F40000"
            app:boxStrokeWidth="1dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Address_LastName_field"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="10dp"
                android:hint="Last Name"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textStyle="bold"
            android:textColor="#464343"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_16sdp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/black"
            app:boxStrokeErrorColor="#F40000"
            app:boxStrokeWidth="1dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Address_Number_field"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="10dp"
                android:hint="Number"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/Address_new_number_filed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Number"
            android:textSize="@dimen/_14sdp"
            android:textColor="#0048FF"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textStyle="bold"
            android:textColor="#464343"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_16sdp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColorHint="@color/black"
            app:boxStrokeErrorColor="#F40000"
            app:boxStrokeWidth="1dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#070707">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Address_Email_field"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="10dp"
                android:hint="Email Address"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/Address_new_email_filed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Email"
            android:textSize="@dimen/_14sdp"
            android:textColor="#0048FF"
            android:inputType="textEmailAddress"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_10sdp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>